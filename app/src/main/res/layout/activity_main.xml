<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="48dp">

        <!-- ══════════════════════════════════════ -->
        <!-- TOP BAR: Logo + Version               -->
        <!-- ══════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frame Generation"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rootless • v1.0.0"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:paddingTop="2dp" />

            </LinearLayout>

            <!-- Status indicator -->
            <LinearLayout
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_inactive"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:gravity="center">

                <View
                    android:id="@+id/statusDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_inactive" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFF"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.08"
                    android:paddingStart="6dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- ══════════════════════════════════════ -->
        <!-- DEVICE INFO CARD                       -->
        <!-- ══════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_dark"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVICE"
                android:textColor="#555555"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:paddingBottom="12dp" />

            <!-- GPU Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GPU"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtGpuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detecting..."
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Driver Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vulkan Driver"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtVulkanDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Refresh Rate Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Refresh Rate"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtRefreshRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 Hz"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Resolution Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resolution"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtResolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

        </LinearLayout>

        <!-- ══════════════════════════════════════ -->
        <!-- COMPATIBILITY CARD                     -->
        <!-- ══════════════════════════════════════ -->
        <LinearLayout
            android:id="@+id/cardCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_dark"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPATIBILITY"
                android:textColor="#555555"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/txtCompatStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checking device compatibility..."
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <!-- Compatibility items -->
            <LinearLayout
                android:id="@+id/compatChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/checkVulkan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="○  Vulkan Support"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:paddingVertical="3dp" />

                <TextView
                    android:id="@+id/checkGpu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="○  GPU Compatibility"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:paddingVertical="3dp" />

                <TextView
                    android:id="@+id/checkRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="○  120Hz+ Display"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:paddingVertical="3dp" />

                <TextView
                    android:id="@+id/checkShizuku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="○  Shizuku / ADB"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:paddingVertical="3dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- ══════════════════════════════════════ -->
        <!-- INJECTION METHOD CARD                  -->
        <!-- ══════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_dark"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INJECTION METHOD"
                android:textColor="#555555"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vulkan layer injection via GPU debug settings. No root required — uses Shizuku or wireless ADB."
                android:textColor="#777777"
                android:textSize="12sp"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="12dp" />

            <Spinner
                android:id="@+id/spinnerMethod"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/spinner_bg"
                android:popupBackground="#1A1A1A"
                android:paddingHorizontal="12dp" />

        </LinearLayout>

        <!-- ══════════════════════════════════════ -->
        <!-- FRAME GENERATION SETTINGS              -->
        <!-- ══════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_dark"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRAME GENERATION"
                android:textColor="#555555"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:paddingBottom="16dp" />

            <!-- Mode Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Interpolation Mode"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerMode"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:background="@drawable/spinner_bg"
                    android:popupBackground="#1A1A1A"
                    android:paddingHorizontal="10dp" />
            </LinearLayout>

            <!-- Target FPS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Target FPS"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtTargetFps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="#BB86FC"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingEnd="8dp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekTargetFps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="60"
                android:max="240"
                android:progress="120"
                android:progressTint="#BB86FC"
                android:thumbTint="#BB86FC"
                android:paddingBottom="14dp" />

            <!-- Quality Slider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quality"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textColor="#BB86FC"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="75"
                android:progressTint="#BB86FC"
                android:thumbTint="#BB86FC" />

        </LinearLayout>

        <!-- ══════════════════════════════════════ -->
        <!-- SELECT GAME CARD                       -->
        <!-- ══════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_dark"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TARGET APP"
                    android:textColor="#555555"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.15" />

                <Button
                    android:id="@+id/btnSelectGame"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Select"
                    android:textColor="#BB86FC"
                    android:textSize="12sp"
                    android:background="@drawable/btn_outline"
                    android:paddingHorizontal="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSelectedGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No app selected"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtGameInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#555555"
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- ══════════════════════════════════════ -->
        <!-- MAIN TOGGLE BUTTON                     -->
        <!-- ══════════════════════════════════════ -->
        <Button
            android:id="@+id/btnToggle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ENABLE FRAME GENERATION"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:background="@drawable/btn_enable"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false" />

        <!-- ══════════════════════════════════════ -->
        <!-- LIVE STATS CARD                        -->
        <!-- ══════════════════════════════════════ -->
        <LinearLayout
            android:id="@+id/cardStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_dark"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE STATS"
                android:textColor="#555555"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:paddingBottom="12dp" />

            <!-- FPS Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Output FPS"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtFps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#03DAC5"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Frame Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Frame Time"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtFrameTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- ms"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Generated Frames Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Generated"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtGenerated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Dropped Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dropped"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtDropped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- GPU Temp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GPU Temp"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtGpuTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--°C"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

        </LinearLayout>

        <!-- ══════════════════════════════════════ -->
        <!-- OPTIONS CARD                           -->
        <!-- ══════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_dark"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPTIONS"
                android:textColor="#555555"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:paddingBottom="14dp" />

            <!-- FPS Overlay Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FPS Overlay"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show floating FPS counter"
                        android:textColor="#555555"
                        android:textSize="12sp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switchFpsOverlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track" />
            </LinearLayout>

            <!-- Auto-detect Games Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto-detect Games"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accessibility service for auto game detection"
                        android:textColor="#555555"
                        android:textSize="12sp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switchAutoDetect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track" />
            </LinearLayout>

            <!-- Force High Refresh Rate -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Force High Refresh Rate"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prevent OS from capping to 60Hz"
                        android:textColor="#555555"
                        android:textSize="12sp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switchForceRefresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track" />
            </LinearLayout>

            <!-- Thermal Guard -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thermal Guard"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto-disable when GPU overheats"
                        android:textColor="#555555"
                        android:textSize="12sp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switchThermal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track" />
            </LinearLayout>

